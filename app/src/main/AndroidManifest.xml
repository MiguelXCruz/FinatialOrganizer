<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miguelxcruz.finatialorganizer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinatialOrganizer">
        <activity android:name="activity.ResetPassword"></activity>
        <activity
            android:name="activity.EarningsActivity"
            android:theme="@style/EarningsTheme"></activity>
        <activity
            android:name="activity.SpendingActivity"
            android:theme="@style/SpendingTheme" />
        <activity
            android:name="activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.FinatialOrganizer.NoActionBar" />
        <activity
            android:name="activity.SignInActivity"
            android:theme="@style/Theme.FinatialOrganizer.NoActionBar" />
        <activity
            android:name="activity.SignUpActivity"
            android:theme="@style/Theme.FinatialOrganizer.NoActionBar" />
        <activity android:name="activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>